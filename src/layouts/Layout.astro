---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions/>
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-purple-heavy text-purple-light-old">
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Aquarion";
    /* src: url("/fonts/fFeelingSoon.ttf") format("truetype"); */
    src: url("/fonts/Aquarion.otf") format("opentype");
  }
  body {
    font-family: "Aquarion", sans-serif;
  }
</style>
