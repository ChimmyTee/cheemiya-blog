---
import type { CollectionEntry } from 'astro:content';

type Props = {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

---

<article>
    <a href={`/blog/${post.slug}`} aria-label={`Read more about ${post.data.title}`}>
        <h1>Image Here</h1>
    </a>

    <div class="mb-4">
        <h1>Catergories</h1>
    </div>

    <a href={`/blog/${post.slug}`} class="text-4xl text-zinc-900 mb-4 font-semibold inline-block">
        {post.data.title}
    </a>

    <p class="text-zinc-500 text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>

    <div class="flex justify-between items-center">
        <h1>{post.data.author}</h1>
        <span class="text-zinc-700 text-xl">
            {post.data.date}
        </span>
    </div>
</article>