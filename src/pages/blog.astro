---

import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const shows = await getCollection("shows");
---

<Layout title="Cheemiya Blog">
	<main class="px-24 w-full max-sm:px-4">
		<h1 class="font-bold text-lg">hi there i am a slot aka main blog</h1>
        {shows.map(show => (
            <a href={`/blog/${show.slug}`}>
                <h2>{show.data.image}</h2>
            </a>
        ))}
	</main>
</Layout>